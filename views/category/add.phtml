<script>
    const photoInput = document.getElementById('photo');
    const errorDiv = document.getElementById('photoError');
    const saveBtn = document.getElementById('saveBtn');

    function validatePhoto() {
        errorDiv.style.display = 'none';
        saveBtn.disabled = false;
        const photo = photoInput.files[0];
        if (photo && photo.size > 20 * 1024 * 1024) {
            errorDiv.textContent = "A imagem deve ter no máximo 20MB.";
            errorDiv.style.display = 'block';
            saveBtn.disabled = true;
            photoInput.value = ""; // Limpa o campo de arquivo
        }
    }

    photoInput.addEventListener('change', validatePhoto);

    document.getElementById('categoryForm').addEventListener('submit', function(e) {
        const photo = photoInput.files[0];
        if (!photo) {
            errorDiv.textContent = "Selecione uma imagem.";
            errorDiv.style.display = 'block';
            saveBtn.disabled = true;
            e.preventDefault();
            return false;
        }
        if (photo.size > 20 * 1024 * 1024) {
            errorDiv.textContent = "A imagem deve ter no máximo 20MB.";
            errorDiv.style.display = 'block';
            saveBtn.disabled = true;
            e.preventDefault();
            return false;
        }
    });
</script>